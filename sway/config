# Config for sway
# Read `man 5 sway` for a complete reference.


#
# Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred applications
set $menu rofi -show run
set $term foot
set $ide vscode
set $browser firefox-bin
set $torbrowser torbrowser-launcher

# Environment variables
exec export XDG_CURRENT_DESKTOP=Unity

# Functions
set $get_cur_ws swaymsg -pt get_workspaces -p | grep -oP '\d*(?= \(focused\))'

#
# Configuration
#
### Basics ###
xwayland enable
focus_wrapping no

### Idle ###
exec swayidle

### Input ###
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.
input "1:1:AT_Translated_Set_2_keyboard" {
    repeat_delay   350
    repeat_rate    30
    xkb_options    caps:swapescape
}
input "1739:52774:DELL09E3:00_06CB:CE26_Mouse" {
    accel_profile  flat
}
input "1739:52774:DELL09E3:00_06CB:CE26_Touchpad" {
    tap            enabled
    natural_scroll enabled
    dwt            enabled
}

### Theme ###
include theme

### Systemd Integration ###
exec "systemctl --user import-environment; systemctl --user start sway-session.target"


#
# Key bindings
#
# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

### Default mode ###
bindsym {
    ## Basics ##
    --no-repeat {
        # Kill focused window / sway
        $mod+Escape kill
        --locked $mod+Alt+Escape exec systemctl --user stop graphical-session.target; exit

        # Lock sway / toggle display
        $mod+Alt+l exec swaylock
        --locked $mod+d output eDP-1 dpms toggle

        # Reload the configuration file
        $mod+Alt+r reload
    }

    ## Moving around ##
    # Move your focus around
    $mod+$left  focus left
    $mod+$down  focus down
    $mod+$up    focus up
    $mod+$right focus right

    $mod+Left   focus left
    $mod+Down   focus down
    $mod+Up     focus up
    $mod+Right  focus right

    # Move the focused window with the same, but add Shift
    $mod+Shift+$left  move left
    $mod+Shift+$down  move down
    $mod+Shift+$up    move up
    $mod+Shift+$right move right

    $mod+Shift+Left   move left
    $mod+Shift+Down   move down
    $mod+Shift+Up     move up
    $mod+Shift+Right  move right

    ## Workspaces ##
    --no-repeat {
        # Switch to workspace
        $mod+1 workspace number 1
        $mod+2 workspace number 2
        $mod+3 workspace number 3
        $mod+4 workspace number 4
        $mod+5 workspace number 5
        $mod+6 workspace number 6
        $mod+7 workspace number 7
        $mod+8 workspace number 8
        $mod+9 workspace number 9
        $mod+0 workspace number 10

        # Move focused container to workspace
        $mod+Shift+1 move container to workspace number 1
        $mod+Shift+2 move container to workspace number 2
        $mod+Shift+3 move container to workspace number 3
        $mod+Shift+4 move container to workspace number 4
        $mod+Shift+5 move container to workspace number 5
        $mod+Shift+6 move container to workspace number 6
        $mod+Shift+7 move container to workspace number 7
        $mod+Shift+8 move container to workspace number 8
        $mod+Shift+9 move container to workspace number 9
        $mod+Shift+0 move container to workspace number 10
        # Note: workspaces can have any name you want, not just numbers.
        # We just use 1-10 as the default.
    }

    # Switch to adjacent workspace
    $mod+minus exec \
        WS=$($get_cur_ws) && WS=$((WS <= 1 ? 1 : WS-1)) && \
        swaymsg -p workspace number $WS
    $mod+equal exec \
        WS=$($get_cur_ws) && WS=$((WS >= 10 ? 10 : WS+1)) && \
        swaymsg -p workspace number $WS

    # Move focused container to adjacent workspace
    $mod+Shift+minus exec \
        WS=$($get_cur_ws) && WS=$((WS <= 1 ? 1 : WS-1)) && \
        swaymsg -p move container to workspace number $WS && \
        swaymsg -p workspace number $WS
    $mod+Shift+equal exec \
        WS=$($get_cur_ws) && WS=$((WS >= 10 ? 10 : WS+1)) && \
        swaymsg -p move container to workspace number $WS && \
        swaymsg -p workspace number $WS

    ## Layout stuff ##
    --no-repeat {
        # Switch the current container between different layout styles
        $mod+s layout stacking
        $mod+t layout tabbed
        $mod+e layout toggle split

        # Make the current focus fullscreen
        $mod+f fullscreen

        # Toggle the current focus between tiling and floating mode
        $mod+Shift+space floating toggle

        # Swap focus between the tiling area and the floating area
        $mod+space focus mode_toggle
    }

    # Move focus to the parent container
    $mod+a focus parent

    ## Scratchpad ##
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Show the next scratchpad window or hide the focused scratchpad window
    --no-repeat $mod+grave scratchpad show

    # Move the currently focused window to the scratchpad
    --no-repeat $mod+Shift+grave move scratchpad

    ## Shortcuts ##
    --locked {
        --no-repeat XF86AudioMute       exec pactl set-sink-mute @DEFAULT_SINK@ toggle
        --no-repeat Shift+XF86AudioMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
        XF86AudioLowerVolume            exec pactl set-sink-volume @DEFAULT_SINK@ -2%
        Shift+XF86AudioLowerVolume      exec pactl set-source-volume @DEFAULT_SOURCE@ -2%
        XF86AudioRaiseVolume            exec pactl set-sink-volume @DEFAULT_SINK@ +2%
        Shift+XF86AudioRaiseVolume      exec pactl set-source-volume @DEFAULT_SOURCE@ +2% 
        --no-repeat XF86AudioPlay       exec mpc toggle
        XF86MonBrightnessDown           exec light -U 5
        XF86MonBrightnessUp             exec light -A 5
    }
    --no-repeat Print                   exec grim -l 9 -| swappy -f -
    
    ## Modes ##
    --no-repeat {
        $mod+g     mode launch
        $mod+r     mode resize
        $mod+p     mode prtscr
    }
}

### Resize mode ###
mode resize bindsym {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    $left  resize shrink width 10px
    $down  resize grow height 10px
    $up    resize shrink height 10px
    $right resize grow width 10px

    Left   resize shrink width 10px
    Down   resize grow height 10px
    Up     resize shrink height 10px
    Right  resize grow width 10px

    # Return to default mode
    --no-repeat Escape mode default
}

### Launch mode ###
mode launch bindsym --no-repeat {
    m      mode default; exec $menu
    t      mode default; exec $term
    j      mode default; exec $term journalctl -fn1000 --no-hostname
    e      mode default; exec $ide
    f      mode default; exec $browser
    d      mode default; exec $torbrowser
    Escape mode default
}

### Screenshot mode ###
mode prtscr bindsym --no-repeat {
    f       mode default; exec grim -l 9 -g "$(swaymsg -t get_tree | jq -j '.. | select(.type?) | select(.focused).rect | "\(.x),\(.y) \(.width)x\(.height)"')" -| swappy -f -
    r       mode default; exec grim -l 9 -g "$(slurp)" -| swappy -f -
    p       mode default; exec grim -t ppm -g "$(slurp -p)" -| wl-copy
    Escape  mode default
}
